@model MoviesMadeEasy.DTOs.DashboardDTO

@{
    ViewData["Title"] = "Dashboard";
}

<div class="content">
    <h1>Hello, @Model.UserName!</h1>

    <h2>Recently Viewed</h2>
    <div id="recently-viewed" class="movie-placeholder"></div>

    <h2>Current Subscriptions</h2>
    <div id="subscription-bubble" class="subscription-placeholder">
        @if (Model.HasSubscriptions)

        {
            @for (var i = 0; i < Model.SubscriptionNames.Count; i++)

            {
                <div class="subscription-item">
                    <img src="@Model.SubscriptionLogos[i]" alt="@Model.SubscriptionNames[i]" class="subscription-logo" />
                    <p>@Model.SubscriptionNames[i]</p>
                </div>
            }
        }

        else

        {
            <div class="overlay-message">
                No subscriptions. <a href="/Subscriptions/Add">add</a> subscriptions now?
            </div>
        }
    </div>
</div>

